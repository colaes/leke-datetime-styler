page {
  background-color: #f5f5f5;
}
.dateStyler {
  padding: 26rpx 0;
}
.dateStyler-title {
  padding-left: 46rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.dateStyler-integrity {
  margin: 26rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}
.dateStyler-integrity .common-time {
  padding: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f3f3f3;
  transition: background-color 0.3s;
  /* 添加过渡效果 */
}
.dateStyler-integrity .common-time.hover {
  background-color: #f9f9f9;
}
.dateStyler-integrity .common-time:first-child {
  border-top-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
}
.dateStyler-integrity .common-time:last-child {
  border-bottom-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
}
.dateStyler-integrity .common-time .name {
  font-size: 28rpx;
}
.dateStyler-integrity .common-time .timebox {
  display: flex;
  align-items: center;
  color: #9d9d9d;
}
.dateStyler-integrity .common-time .timebox .time {
  font-size: 26rpx;
  padding-right: 10rpx;
}
.dateStyler-integrity .common-time .timebox .arrow {
  width: 30rpx;
  height: 30rpx;
}
.dateStyler-custom {
  margin: 26rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}
.dateStyler-custom .theme {
  font-size: 28rpx;
  padding-bottom: 20rpx;
}